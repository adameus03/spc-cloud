  </tbody>
</table>

<style>
  .spc-navigable {
    cursor: pointer;
  }
</style>
<script>
  function navigationTriggered(fname, parentDir) {
    //alert(fname); //for now
    let newHref = "/list-gui?d=" + parentDir;
    if(parentDir.endsWith("/")) {
      newHref += fname;
    } else {
      newHref += "/" + fname;
    }
    window.location.href = newHref;
  }
</script>