    <tbody>
      <% if(locals.filesList) { %>
        <% for (let i = 0; i < locals.filesList.length; i++) { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= locals.filesList[i] %></td>
            <td><a href="/api/download?f=<%= locals.filesList[i] %>">⬇️</a></td>
          </tr>
        <% } %>
      <% } %>
